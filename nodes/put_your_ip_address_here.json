{
  "environment":"production",
  "platform_family": "debian",
  "authorization": {
    "sudo": {
      "users": ["deploy"],
      // everyone in the group sysadmin gets sudo rights
      "groups": ["sysadmin"],
      "passwordless": false
    } 
  },
  "monit": {
    "notify_emails" : ["email@example.com"],
    "enable_emails" : true,
    "mailserver" : {
      "host" : "smtp.gmail.com",
      "port" : "587",
      "username" : "email@example.com",
      "password" : "password",
      "hostname" : "hostname"
    },
    "web_interface" : {
      "allow" : ["monitUser","monitPassword"]
    }
  },
  "postgresql" : {
    "password" : {
      "postgres" : "postgresPassword"
    }
  },
  "security": {
    "ssh_port": "22"
  },
  "run_list":
  [
    "role[server]",
    "role[postgres-server]",
    "role[rails-app]",
    "role[mongo-server]",
    "role[redis-server]",
    "role[memcached-server]",
    "role[elasticsearch-server]",
    "role[nginx]"
  ]
}